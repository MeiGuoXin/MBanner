<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.MainActivity">

    <com.mgx.mbanner.custom.MBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:imgDelay="3000"
        app:indicatorPosition="left"
        app:isPreloading="true"
        app:indicatorStyle="ORDINARY"
        app:isVideoCaching="true"
        app:isVideoController="false"
        app:loadingErrorPicture="@mipmap/err"
        app:preloadingPages="1"
        app:showOccupationMap="@mipmap/seat"
        app:watermarkLocation="bottom"
        app:watermarkTextColor="@color/colorAccent"
        app:watermarkTextSize="10sp">

    </com.mgx.mbanner.custom.MBanner>
</FrameLayout>